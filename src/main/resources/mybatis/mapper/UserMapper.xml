<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.AISubtitles.Server.mapper.UserMapper">

    <insert id="regist">
        insert into user_info(user_name,user_gender,user_birthday,
                            user_password,user_email,user_phone_number,image)
        values(#{userName},#{userGender},#{userBirthday},#{userPassword},
                #{userEmail},#{userPhoneNumber},'')
    </insert>

    <select id="findUserByPhoneNumber" resultType="com.AISubtitles.Server.domain.User">
        select *
        from user_info
        where user_phone_number=#{userPhoneNumber}
    </select>

    <select id="findUserByEmail" resultType="com.AISubtitles.Server.domain.User">
        select *
        from user_info
        where user_email=#{userEmail}
    </select>

</mapper>